{
  "name": "Udacity Project Reviewer Notifier",
  "version": "0.1.0",
  "description": "Displays projects for review",
  "homepage_url": "https://github.com/brenopolanski/notifier-for-udacity-reviewer-chrome",
  "manifest_version": 2,
  "minimum_chrome_version": "46",
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": [
      "api.js",
      "main.js"
    ]
  },
  "permissions": [
    "alarms",
    "tabs",
    "notifications",
    "https://review.udacity.com/"
  ],
  "browser_action": {
    "default_icon": "images/icon-20.png"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
